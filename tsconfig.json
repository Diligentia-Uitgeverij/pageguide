{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es3",
		"outDir": "./types",
		"lib": [ "es2017", "dom" ],
		"moduleResolution": "node",
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noEmitHelpers": false,
		"sourceMap": true,
		"noStrictGenericChecks": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"declaration": true
	},
	"include": [
		"./src/**/*.ts"
	],
	"compileOnSave": false,
	"buildOnSave": false
}